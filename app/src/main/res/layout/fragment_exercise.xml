<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExerciseFragment"
    android:background="@drawable/backgroundd">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp">

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:columnCount="1"
            android:columnOrderPreserved="false"
            android:rowCount="4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.04">

            <androidx.cardview.widget.CardView
                android:id="@+id/breathing_exer"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#85FFFEF4"
                app:cardCornerRadius="25dp"
                android:outlineProvider="none"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="BREATHING EXERCISE"
                    android:textColor="#373737"
                    android:textSize="20dp"
                    />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/yoga_pose2"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/yoga_exer"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginTop="35dp"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#85FFFEF4"
                app:cardCornerRadius="25dp"
                android:outlineProvider="none"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="129dp"
                        android:layout_marginLeft="12dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/yoga_pose1" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="25dp"
                        android:gravity="center"
                        android:text="YOGA PRACTICE"
                        android:textColor="#373737"
                        android:textSize="20dp"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/aerobics"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginTop="35dp"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#85FFFEF4"
                app:cardCornerRadius="25dp"
                android:outlineProvider="none"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="25dp"
                        android:gravity="center"
                        android:text="AEROBICS"
                        android:textColor="#373737"
                        android:textSize="20dp"
                        />

                    <ImageView
                        android:layout_marginLeft="30dp"
                        android:layout_width="129dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/aerobics" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/Zumba"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_marginTop="35dp"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#85FFFEF4"
                app:cardCornerRadius="25dp"
                android:outlineProvider="none"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginLeft="20dp"
                        android:layout_width="129dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/zumba" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:layout_marginLeft="27dp"
                        android:layout_marginTop="25dp"
                        android:gravity="center"
                        android:text="ZUMBA"
                        android:textColor="#373737"
                        android:textSize="20dp"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>